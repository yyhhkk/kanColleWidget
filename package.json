{
  "name": "kan-colle-widget",
  "version": "3.0.0-alpha.1",
  "description": "『艦これ』をちょっとだけ快適にするやつ",
  "engines": {
    "node": "9.11",
    "npm": "6.4.0"
  },
  "scripts": {
    "start": "NODE_ENV=development webpack -p --watch",
    "build": "NODE_ENV=production webpack",
    "zip": "rm -rf release/kcwidget release/kcwidget.zip && mkdir -p release/kcwidget && cp -r dest release/kcwidget && cp manifest.json release/kcwidget && zip -r release/kcwidget.zip release/kcwidget/*",
    "version": "node ./scripts/version.js",
    "deploy": "node ./scripts/publish.js ./release/kcwidget.zip",
    "lint": "tslint ./src/**/*.ts",
    "test": "jest --coverage",
    "ci": "tslint ./src/**/*.ts && jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": "git+https://github.com/otiai10/kanColleWidget.git",
  "author": "otiai10",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/otiai10/kanColleWidget/issues"
  },
  "homepage": "https://github.com/otiai10/kanColleWidget#readme",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.0",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.3",
    "request-promise": "^4.2.2",
    "sass-loader": "^7.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "tests/.*-test\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/v2_backup/"
    ]
  },
  "dependencies": {
    "spectre.css": "^0.5.3"
  }
}
